{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react-native",
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es2015",
    "outDir": "./lib",
    "types": [],
    "lib": ["dom", "es5", "scripthost", "es2015"]
  },
  "files": [
    "src/frontend/main.ts",
    "src/frontend/styles.ts",
    "src/frontend/drivers/apk-installer.ts",
    "src/frontend/drivers/package-info.ts",
    "src/typings/react-native-apk-installer.d.ts",
    "src/typings/react-native-progress.d.ts",
    "src/typings/react-native-action-button.d.ts",
    "src/typings/react-native-simple-markdown.d.ts"
  ],
  "exclude": ["node_modules"]
}
